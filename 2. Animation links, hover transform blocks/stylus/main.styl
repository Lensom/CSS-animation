@import "_font-face.styl"
@import "_libs.styl"
@import "_vars.styl"

// all
*
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	&:before, &:after
		-webkit-box-sizing border-box
		-moz-box-sizing border-box
		box-sizing border-box

// placeholder
*::-webkit-input-placeholder,
*:-moz-placeholder,
*::-moz-placeholder,
*:-ms-input-placeholder
	color #666
	opacity 1

// input required valid/invalid
body input:focus:required:invalid,
body textarea:focus:required:invalid
	color #666
body input:required:valid,
body textarea:required:valid
	color #666

html, body
	height 100%

body
	font-size 16px
	min-width 320px
	position relative
	line-height 1.65
	font-family $default-font
	overflow-x hidden
	margin 0

img
	display block
	max-width 100%
	height auto

.content
	margin 50px
	a
		position relative
		text-decoration none
		color #2f56b0
		padding-bottom 3px
		transition color .4s ease-out
		&::after
			border-radius 1em
			border-top .1em solid #2f56b0
			content: ''
			position absolute
			right 100%
			bottom .14em
			left 0
			transition right .4s cubic-bezier(0, .5, 0, 1), border-color .4s ease-out
		&:hover
			text-decoration none
			color: #457dfb
			&::after		
				animation anchor-underline 1s cubic-bezier(0, .5, 0, 1) infinite
				border-color #456dfb

// Styles for the tooltips
.title-tooltip
	background rgba(255, 255, 255, .9)
	border 2px solid #457dfb
	border-radius .1em
	font-size .7em
	padding .25em .5em
	position absolute
	bottom 2em
	left calc(50% - 8em)
	text-align center
	width 16em
	z-index 10
	opacity 0
	transition opacity .2s ease-out, transform .5s cubic-bezier(0, 1, .5, 1)
	&:after
		content ''
		border-style solid
		border-color #457dfb transparent 
		border-radius 0
		border-width .2em .2em 0 .2em
		position absolute
		bottom -.2em
		left calc(50% - .2em)
		width 0
		opacity: 0
		
.anchor-tooltip
	&:hover
		.title-tooltip
			opacity 1
			transform none
			transform translateY(-.25em)

.flex-grid
	display flex
	justify-content center
	align-items center
	margin-top 140px
	margin-bottom 40px
	
.option
	text-align center
	transition transform 5s cubic-bezier(0, 1.7, .3, 1), background .2s ease-out
	*
		transition transform .5s cubic-bezier(0, 1, .3, 1)
	.button
		border 1px solid green
		padding 3px 10px
		background green
		color #fff
		border-radius 15px
		font-size 14px
	.more-info
		visibility hidden
	.call-to-action
		transform scale(.2)
		visibility hidden
	.summary
		max-width 200px
		margin 0 auto
	img 
		max-width 100px
		margin 0 auto
.highlighted 
	background #fff
	border-color #eee
	transform scale(1.1) translateY(1em)
	.badge
		transform translateY(-5em) scale(1.2)
		text-align center			
	h2 
		transform translateY(-3.5em)
	.more-info
		transform translateY(-4em)
		visibility visible	
	.call-to-action
		transform translateY(1.25em)
		visibility visible
	.summary
		visibility hidden

@keyframes anchor-underline {
	0%, 10% {
		left 0
		right 100%
	}
	40%, 60% {
		left 0
		right 0
	}
	90%, 100% {
		left 100%
		right 0
	}
}


@import "_media.styl" // Always at the end
